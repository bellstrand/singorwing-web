{
	"extends": "./node_modules/aurelia-tools/.eslintrc.json",
	"rules": {
		"indent": [2, "tab", {
			"SwitchCase": 1
		}],
		"one-var": 0,
		"default-case": 0,
		"keyword-spacing": [
			"error",
			"overrides": {
				"if": { "after": false },
				"for": { "after": false },
				"while": { "after": false },
				"switch": { "after": false }
			}
		]
	}
}
